<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Informasi">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        >

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="150dp"
            android:src="@drawable/logo"
            android:layout_gravity="center_horizontal">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="Aplikasi ini digunakan untuk mencatat ide, kegiatan, informasi, tugas, daftar belanja, jadwal, dan berbagai jenis konten penting lainnya. Aplikasi ini membantu pengguna dalam menjaga informasi tetap teratur dan mudah diakses."/>
    </LinearLayout>

</FrameLayout>